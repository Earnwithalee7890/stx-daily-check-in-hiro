# Hiro Chainhooks Configuration
# Copy this file to .env.local and fill in your values

# Hiro API Key (for programmatic chainhook management)
# Get yours from: https://platform.hiro.so/
HIRO_API_KEY=your-hiro-api-key-here

# Chainhook webhook URL (update with your Vercel deployment URL)
NEXT_PUBLIC_WEBHOOK_URL=https://your-app.vercel.app/api/chainhook

# Secret for webhook authentication
CHAINHOOK_AUTH_SECRET=your-secret-key-here

# Registered Chainhook UUID (from Hiro Platform after registration)
CHAINHOOK_UUID=your-chainhook-uuid-here

# Contract details (already configured)
NEXT_PUBLIC_CONTRACT_ADDRESS=SP2F500B8DTRK1EANJQ054BRAB8DDKN6QCMXGNFBT.builder-rewards-v2
NEXT_PUBLIC_NETWORK=mainnet
